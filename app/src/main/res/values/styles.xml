<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorBackground">@color/background</item>
    </style>
    <style name="AppThemeWithActionBar" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorBackground">@color/background</item>
    </style>
<!--
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ButtonBorder" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="search_field" parent="Base.ThemeOverlay.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/black_38</item>
        <item name="android:background">@drawable/search_field_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">@color/black_38</item>
        <item name="android:drawableRight">@drawable/ic_search_with_tint</item>
    </style>

    <style name="activity">
        <!--<item name="android:background">@color/colorPrimaryWhite</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="activity.padding">
        <item name="android:padding">8dp</item>
    </style>

    <style name="MainTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabIndicatorHeight">4dp</item>
        <!--<item name="tabPaddingStart">4dp</item>-->
        <!--<item name="tabPaddingEnd">4dp</item>-->
        <item name="android:background">@color/tabBackground</item>
        <item name="tabTextAppearance">@style/MainTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/tabIndicatorColor</item>
    </style>

    <style name="MainTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tabTextColor</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="DetailTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:selectableItemBackground">@color/blue_text_color</item>
        <item name="selectableItemBackground">@color/blue_text_color</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/DetailTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/blue_text_color</item>
    </style>

    <style name="DetailTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tabTextColor</item>
    </style>


    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:textColor">@color/textCommonColor</item>-->
    </style>

    <style name="text.common">
        <item name="android:textSize">@dimen/text_size_common</item>
    </style>

    <style name="text.common.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="common_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@drawable/list_latest_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="playlist_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@drawable/list_playlist_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="playlist_thumbnail">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/playlist_thumbnail_height</item>

    </style>


    <style name="thumbnail">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:layout_width">@dimen/latest_list_thumbnail_width</item>
        <item name="android:layout_height">@dimen/latest_list_thumbnail_height</item>

    </style>

    <style name="text.title.date">
        <item name="android:textColor">@color/blue_text_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="tab_additional">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_additional_height</item>
        <item name="android:padding">1dp</item>
        <!--<item name="android:background">@color/blue_text_color</item>-->
        <item name="android:background">@drawable/tab_item_background</item>
        <item name="android:textColor">@color/tab_item_title</item>
    </style>

    <style name="item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="playlist_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="text.guest" parent="text.common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_toLeftOf">@+id/social_panel</item>
        <item name="android:layout_toRightOf">@+id/guest_thumbnail</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text.guest.title">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="login_button">

        <item name="android:background">@color/accent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/colorPrimaryWhite</item>
    </style>

    <style name="button_log">
        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/colorPrimaryWhite</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="DemoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="video_webview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/episode_video_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppThemeWithoutActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeWithoutActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
